        <Button x:Name="button_karmand" Content="کارمند" HorizontalAlignment="Left" Margin="345,149,0,0" VerticalAlignment="Top" Width="144" Height="126" Click="Button_Click_karmand" FontFamily="rahrovan" FontSize="48">
