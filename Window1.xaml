        <Button x:Name="button_modir" Content="مدیر" HorizontalAlignment="Left" Margin="597,149,0,0" VerticalAlignment="Top" Width="146" Height="126" Click="Button_Click_modir" FontFamily="rahrovan" FontSize="48">
